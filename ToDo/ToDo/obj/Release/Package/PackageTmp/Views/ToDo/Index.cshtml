@model IEnumerable<ToDo.Models.TaskModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>&nbsp;</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TaskTitle)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Done)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TaskTitle)
        </td>
        <td @*class="multiline" style="white-space: pre-wrap;"*@>
            <div class="multiline" style="display:inline-block">@Html.DisplayFor(modelItem => item.Description)</div>
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Done)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ObjectId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.ObjectId })
        </td>
    </tr>
}

</table>
